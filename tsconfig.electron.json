{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist-electron",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"],
        "@/*": ["./src/*"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false
    },
    "include": ["electron.ts"]
  }